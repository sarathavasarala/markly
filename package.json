{
  "name": "markly",
  "version": "1.0.0",
  "description": "Smart Bookmark Library - LLM-enriched bookmark manager",
  "scripts": {
    "start": "npm run start:prod",
    "start:prod": "concurrently \"npm run backend\" \"npm run frontend\"",
    "start:test": "concurrently \"npm run backend:test\" \"npm run frontend:test\"",
    "backend": "cd backend && FLASK_APP=app:create_app ../.venv/bin/flask run --port 5050",
    "backend:prod": "npm run backend",
    "backend:test": "cd backend && APP_ENV=test FLASK_APP=app:create_app ../.venv/bin/flask run --port 5050",
    "frontend": "cd frontend && npm run dev",
    "frontend:prod": "npm run frontend",
    "frontend:test": "cd frontend && npm run dev:test",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "python3 -m venv .venv && .venv/bin/pip install -r backend/requirements.txt",
    "setup:frontend": "cd frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && ../.venv/bin/python -m pytest",
    "test:frontend": "cd frontend && npm run test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && ../.venv/bin/python -m flake8 .",
    "stop": "lsof -ti:5050 | xargs kill -9 2>/dev/null; lsof -ti:5173 | xargs kill -9 2>/dev/null",
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx}": [
      "cd frontend && npm run lint"
    ],
    "backend/**/*.py": [
      "cd backend && ../.venv/bin/python -m flake8"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}